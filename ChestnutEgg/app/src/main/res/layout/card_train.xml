<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"


>

    <android.support.v7.widget.CardView
            android:id="@+id/card_train"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardBackgroundColor="#FCE6EA"
            app:cardCornerRadius="10dp"
            app:cardElevation="8dp">
        <TextView
                android:id="@+id/train_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:text="快速 k740"
                android:textSize="20sp" />

        <View
                android:layout_width="fill_parent"
                android:layout_marginTop="65dp"
                android:layout_height="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#aa000000" />

        <TextView
                android:id="@+id/later_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="30dp"
                android:layout_marginRight="10dp"
                android:text="30天后"
                android:textSize="20sp" />

        <TextView
                android:id="@+id/departure_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="10dp"
                android:text="昆明站"
                android:textSize="20sp" />

        <TextView
                android:id="@+id/departure_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="10dp"
                android:text="23:35"
                android:textSize="30sp" />

        <TextView
                android:id="@+id/destination_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="100dp"
                android:layout_marginRight="10dp"
                android:text="上海南"
                android:textSize="20sp" />

        <TextView
                android:id="@+id/departure_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="140dp"
                android:layout_marginLeft="10dp"
                android:text="2月26日 周一"
                android:textSize="20sp" />

        <TextView
                android:id="@+id/text7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="180dp"
                android:layout_marginLeft="10dp"
                android:text="座位号"
                android:textSize="20sp" />

        <TextView
                android:id="@+id/seat_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="210dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:text="11车21号下铺"
                android:textSize="23sp" />

        <Button
                android:id="@+id/btn_share"
                android:text="SHARE"
                android:background="#00000000"
                android:layout_gravity="left"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="250dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        <Button
                android:id="@+id/btn_more"
                android:background="#00000000"
                android:textColor="#7AD3E0"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:layout_marginTop="250dp"
                android:text="READ MORE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


    </android.support.v7.widget.CardView>

